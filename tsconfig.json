{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "jsxFactory": "Taro.createElement",
    "allowJs": false,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
    "paths": {
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@api": ["./src/api"],
      "@config/*": ["./src/config/*"],
      "@assets/*": ["./src/assets/*"],
      "@img/*": ["./src/assets/img/*"],
      "@utils/*": ["./src/utils/*"],
      "@src/*": ["./src/*"],
      "fsscloud": ["./src/fssCloud"]
    }
  },
  "compileOnSave": false
}